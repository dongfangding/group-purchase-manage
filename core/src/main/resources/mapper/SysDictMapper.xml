<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddf.group.purchase.core.mapper.SysDictMapper">
  <resultMap id="BaseResultMap" type="com.ddf.group.purchase.core.model.entity.SysDict">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="dict_type_code" jdbcType="VARCHAR" property="dictTypeCode" />
    <result column="dict_type_name" jdbcType="VARCHAR" property="dictTypeName" />
    <result column="dict_detail_code" jdbcType="VARCHAR" property="dictDetailCode" />
    <result column="dict_detail_name" jdbcType="VARCHAR" property="dictDetailName" />
    <result column="request_value" jdbcType="VARCHAR" property="requestValue" />
    <result column="sort" jdbcType="INTEGER" property="sort" />
    <result column="active" jdbcType="BIT" property="active" />
  </resultMap>
  <sql id="Base_Column_List">
    id, dict_type_code, dict_type_name, dict_detail_code, dict_detail_name, request_value,
    sort, active
  </sql>

  <select id="selectById" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from sys_dict
    where id = #{id}
  </select>

  <select id="selectList" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from sys_dict
  </select>

  <select id="selectListByDictTypeCode" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from sys_dict
    where dict_type_code = #{dictTypeCode} and active = true
    order by sort asc
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    insert into sys_dict (dict_type_code, dict_type_name, dict_detail_code, dict_detail_name,
      request_value, sort, active)
    values (#{dictTypeCode}, #{dictTypeName}, #{dictDetailCode}, #{dictDetailName}, #{requestValue},
      #{sort}, #{active})
  </insert>

  <update id="updateById">
    update sys_dict
    <set>
      <if test="dictTypeCode != null">dict_type_code = #{dictTypeCode},</if>
      <if test="dictTypeName != null">dict_type_name = #{dictTypeName},</if>
      <if test="dictDetailCode != null">dict_detail_code = #{dictDetailCode},</if>
      <if test="dictDetailName != null">dict_detail_name = #{dictDetailName},</if>
      <if test="requestValue != null">request_value = #{requestValue},</if>
      <if test="sort != null">sort = #{sort},</if>
      <if test="active != null">active = #{active}</if>
    </set>
    where id = #{id}
  </update>

  <delete id="deleteById">
    delete from sys_dict where id = #{id}
  </delete>
</mapper>
