<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddf.group.purchase.core.mapper.UserAddressMapper">
  <resultMap id="BaseResultMap" type="com.ddf.group.purchase.core.model.entity.UserAddress">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="uid" jdbcType="BIGINT" property="uid" />
    <result column="province" jdbcType="VARCHAR" property="province" />
    <result column="city" jdbcType="VARCHAR" property="city" />
    <result column="area" jdbcType="VARCHAR" property="area" />
    <result column="detail_address" jdbcType="VARCHAR" property="detailAddress" />
    <result column="mobile" jdbcType="VARCHAR" property="mobile" />
    <result column="receiver_name" jdbcType="VARCHAR" property="receiverName" />
    <result column="building_no" jdbcType="VARCHAR" property="buildingNo" />
    <result column="room_no" jdbcType="VARCHAR" property="roomNo" />
    <result column="default_flag" jdbcType="BIT" property="defaultFlag" />
  </resultMap>
  <sql id="Base_Column_List">
    id, `uid`, province, city, area, detail_address, mobile, receiver_name, building_no,
    room_no, default_flag
  </sql>

  <select id="selectById" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from user_address
    where id = #{id}
  </select>

  <select id="selectList" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from user_address
  </select>

  <select id="selectByUid" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from user_address
    where uid = #{uid}
  </select>

  <select id="selectUserDefaultAddress" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from user_address
    where uid = #{uid} and default_flag = true
    order by id desc
    limit 1
  </select>

  <update id="cancelUserDefaultAddress">
    update user_address
    set default_flag = false
    where uid = #{uid} and default_flag = true
  </update>

  <delete id="deleteByIdAndUid">
    delete from user_address where id = #{id} and uid = #{uid}
  </delete>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    insert into user_address (uid, province, city, area, detail_address, mobile, receiver_name,
      building_no, room_no, default_flag)
    values (#{uid}, #{province}, #{city}, #{area}, #{detailAddress}, #{mobile}, #{receiverName},
      #{buildingNo}, #{roomNo}, #{defaultFlag})
  </insert>

  <update id="updateById">
    update user_address
    <set>
      <if test="uid != null">uid = #{uid},</if>
      <if test="province != null">province = #{province},</if>
      <if test="city != null">city = #{city},</if>
      <if test="area != null">area = #{area},</if>
      <if test="detailAddress != null">detail_address = #{detailAddress},</if>
      <if test="mobile != null">mobile = #{mobile},</if>
      <if test="receiverName != null">receiver_name = #{receiverName},</if>
      <if test="buildingNo != null">building_no = #{buildingNo},</if>
      <if test="roomNo != null">room_no = #{roomNo},</if>
      <if test="defaultFlag != null">default_flag = #{defaultFlag}</if>
    </set>
    where id = #{id}
  </update>

  <delete id="deleteById">
    delete from user_address where id = #{id}
  </delete>
</mapper>
