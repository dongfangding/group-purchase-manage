<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddf.group.purchase.core.mapper.GroupPurchaseGoodMapper">
  <resultMap id="BaseResultMap" type="com.ddf.group.purchase.core.model.entity.GroupPurchaseGood">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="group_purchase_id" jdbcType="BIGINT" property="groupPurchaseId" />
    <result column="good_name" jdbcType="VARCHAR" property="goodName" />
    <result column="good_description" jdbcType="VARCHAR" property="goodDescription" />
    <result column="price" jdbcType="DECIMAL" property="price" />
    <result column="stock" jdbcType="INTEGER" property="stock" />
    <result column="limit_type" jdbcType="VARCHAR" property="limitType" />
    <result column="limit_value" jdbcType="BIGINT" property="limitValue" />
    <result column="good_pic" jdbcType="VARCHAR" property="goodPic" />
    <result column="specification" jdbcType="VARCHAR" property="specification" />
    <result column="remaining_stock" jdbcType="INTEGER" property="remainingStock" />
  </resultMap>
  <sql id="Base_Column_List">
    id, group_purchase_id, good_name, good_description, price, stock, limit_type, limit_value,
    good_pic, specification, remaining_stock
  </sql>

  <select id="selectById" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from group_purchase_good
    where id = #{id}
  </select>

  <select id="selectList" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from group_purchase_good
  </select>

  <select id="selectByGroupPurchaseId" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from group_purchase_good
    where group_purchase_id = #{groupPurchaseId}
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    insert into group_purchase_good (group_purchase_id, good_name, good_description, price, stock,
      limit_type, limit_value, good_pic, specification, remaining_stock)
    values (#{groupPurchaseId}, #{goodName}, #{goodDescription}, #{price}, #{stock},
      #{limitType}, #{limitValue}, #{goodPic}, #{specification}, #{remainingStock})
  </insert>

  <update id="updateById">
    update group_purchase_good
    <set>
      <if test="groupPurchaseId != null">group_purchase_id = #{groupPurchaseId},</if>
      <if test="goodName != null">good_name = #{goodName},</if>
      <if test="goodDescription != null">good_description = #{goodDescription},</if>
      <if test="price != null">price = #{price},</if>
      <if test="stock != null">stock = #{stock},</if>
      <if test="limitType != null">limit_type = #{limitType},</if>
      <if test="limitValue != null">limit_value = #{limitValue},</if>
      <if test="goodPic != null">good_pic = #{goodPic},</if>
      <if test="specification != null">specification = #{specification},</if>
      <if test="remainingStock != null">remaining_stock = #{remainingStock}</if>
    </set>
    where id = #{id}
  </update>

  <delete id="deleteById">
    delete from group_purchase_good where id = #{id}
  </delete>
</mapper>
